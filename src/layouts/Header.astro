---
import Redes from "../components/Redes.astro";

---

<header id="home">
  
  <h1 class="text-4xl md:text-6xl text-center font-semibold text-slate-100 md:text-left">I`M GERSON A<br/>
      <span class="bg-gradient-to-r from-cyan-500 to-blue-500 bg-clip-text text-transparent">WEB DEVELOPER</span>
    </h1>
  <div class="flex justify-center md:justify-start">
    <Redes></Redes>
  </div>
</header>

<style>
  header{
    @apply
    w-full h-screen
    p-12
    flex flex-col gap-12 justify-between md:justify-center
    bg-gradient-to-r from-slate-800 to-slate-900
  }

  h1{
    animation-name: inicio;
    animation-duration: 1s;
  }

  @keyframes inicio {

    from{
      opacity: 0;
      translate: -50px;
    }
    

  }

</style>