---
const { href, title, image, git } = Astro.props;


---


<div class="mb-4 ">
	<a href={href} class="block" target="_blank" rel="noopener">
		<div class="border border-neutral-700 md:hover:scale-105 transition-all duration-200 ease-linear overflow-hidden">
			<img src={image} class="object-cover object-top aspect-video" alt={title}>
		</div>
	</a>
	
	<div class="p-4 flex justify-between">
		<a href={href} class="block text-xl hover:underline text-neutral-300 transition-all" target="_blank" rel="noopener">{title}</a>
		<a href={git} class="block text-2xl hover:text-neutral-200 text-neutral-300 transition-all" target="_blank" rel="noopener"><i class="fa-brands fa-github"></i></a>
	</div>

</div>



